    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Création du match</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for([@match]) do |f| %>
          <%= f.simple_fields_for :convocations, Convocation.new do |convocation| %>
            <%= convocation.input :registration_id, collection: @tournament.registrations %>
          <% end %>
