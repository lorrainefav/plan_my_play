<%= render 'shared/tabs' %>
<div class="container-fluid px-5">
    <div class="text-center py-3">
      <h2>Matchs du jour</h2>
      <h4><%= @date.strftime("%d.%m.%Y") %></h4>
      <%= link_to "Previous", tournament_path(@tournament, date: @date - 1.days) %>
      <%= link_to "Next", tournament_path(@tournament, date: @date + 1.days) %>
    </div>

    <div class="row">
      <div class="col-md-10">
        <div class="container-fluid">
          <div class="row">
            <div class="col-2"></div>
            <% (1..5).each do |col| %>
              <div class="col-2">
                Court <%= col %>
              </div>
            <% end %>
          </div>
          <% (9..22).each do |hour|%>
            <div class="row" style="border-top: 1px solid #CCC; height:100px">
              <div class="col-2">
                <%= hour %>:00
              </div>
              <% (1..5).each do |court| %>
                <div class="col-2 dropable" data-date="<%= @date.change(hour: hour) %>" data-court=<%= court %>>
                  <% @tournament.matches.where(court:court, begin_at: @date.change(hour: hour)).each do |match| %>
                    <%= render "shared/card_match", match: match %>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
      <div class="col-md-2">
        <h2><%= @tournament.name %></h2>
        <%= link_to "Envoyer les convocations", convocations_grouped_send_tournament_path(@tournament), method: :post, class: "btn btn-outline-success" %>
        <button type="button" class="btn btn-outline-secondary" style="margin-top: 25px; margin-bottom: 25px" data-toggle="modal" data-target="#create_match">Nouveau match
        </button>
        <div class="dropable">
          <% @tournament.matches.for_index.order(created_at: :desc).each do |match| %>
            <%= render "shared/card_match", match: match %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
<!-- Modal -->
<div class="modal fade" id="create_match" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Nouveau match</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render 'shared/match_form' %>
      </div>
    </div>
  </div>
</div>
