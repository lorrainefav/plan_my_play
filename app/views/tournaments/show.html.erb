<div class="container">
    <ul class="nav nav-tabs">
      <li class="nav-item">
        <%= link_to "Matchs",  tournament_path(@tournament), class:"nav-link active" %>
      </li>
      <li class="nav-item">
        <%= link_to "Joueurs",  registrations_path(@tournament), class:"nav-link" %>
      </li>
    </ul>
</div>

  <div class="container-fluid">
    <div class="row">
      <h2>Les Matchs du jour</h2>
      <p><%= Date.today.strftime("Le : %d.%m.%Y") %></p>
    </div>
    <div class="row">
      <div class="col-md-9">
        <div class="container-fluid">
        <% (1..15).each do |row|%>
          <div class="row">
            <% (1..4).each do |col| %>
              <div class="col-3 data-row=<%= row %> data-col=<%= col %>">
                <%= "#{row} / #{col}" %>
                <% @tournament.matches.where(court:col).each do |match| %>
                  <%= render "shared/card_match", match: match %>
                <% end %>
              </div>
            <% end %>
          </div>
        <% end %>
        </div>
      </div>
      <div class="col-md-3">
        <h2><%= @tournament.name %></h2>
        <%= link_to "Envoyer les convocations", convocations_grouped_send_tournament_path(@tournament), method: :post, class: "btn btn-outline-success" %>
        <button type="button" class="btn btn-outline-secondary" style="margin-top: 25px; margin-bottom: 25px" data-toggle="modal" data-target="#create_match">Nouveau match
        </button>
        <% @tournament.matches.order(created_at: :desc).each do |match| %>
          <%= render "shared/card_match", match: match %>
        <% end %>
      </div>
    </div>

<!-- Modal -->
<div class="modal fade" id="create_match" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Nouveau match</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= simple_form_for([@match]) do |f| %>
          <%= f.simple_fields_for :convocations, Convocation.new do |convocation| %>
            <%= convocation.input :registration_id, label: "Joueur 1  ", collection: @tournament.registrations %>
          <% end %>
          <%= f.simple_fields_for :convocations, Convocation.new do |convocation| %>
            <%= convocation.input :registration_id, label: "Joueur 2  ", collection: @tournament.registrations %>
          <% end %>
          <div class="form-inputs">
            <%= f.input :begin_at, label: "Date" %>
          </div>
          <div class="form-actions">
            <%= f.submit "CrÃ©er", class: "btn btn-outline-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
