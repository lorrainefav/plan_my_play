<div class="container">
  <ul class="nav nav-tabs">
    <li class="nav-item">
      <%= link_to "Matchs",  tournament_path(@tournament), class:"nav-link" %>
    </li>
    <li class="nav-item">
      <%= link_to "Joueurs",  registrations_path(@tournament), class:"nav-link active" %>
    </li>
  </ul>
</div>


<div class="container-fluid py-2">
  <h2 class='text-center'>Liste des inscrits à <%= @tournament.name %></h2>
  <div class="row">
    <div class="col-md-2 filters-box">
      <%= render 'filters', tournament: @tournament %>
    </div>
    <div class="col-md-8">
      <h2 id="no-players" class="d-none">Pas de joueurs pour ces critères</h2>
      <div id="player-cards">
        <%= render @registrations %>
      </div>
    </div>
    <div class="col-md-2">
      <%= render 'shared/match_form' %>
    </div>
  </div>
</div>

