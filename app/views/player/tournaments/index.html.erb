


<div class="main-container">
  <div class="container">
    <div class="row">
      <% @registrations.each do |registration| %>
        <div class="col-xs-12 col-sm-4">
          <div class="card-body">
            <div class="card-picture" style="background-image: url('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRtj_afZu3Qh52f5mJmGDjpPC0w6DnIUE598E4sUJVlM00uiUcC');">
              <h3><%= registration.tournament.name %></h3>
            </div>
            <div class="card-likes">
              <div>

                <p><%= registration.tournament.city %></p>
                <p>Du <%= registration.tournament.begin_at %> au <%= registration.tournament.end_at %></p>
              </div>
            </div>
          </div>
          <div class="card-footer">
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>






