<div class="navbar-wagon">
  <!-- Logo -->
  <% if user_signed_in? %>
    <% if current_user.supervisor %>
      <%= link_to tournaments_path, class: "navbar-wagon-brand navbar-wagon-item navbar-wagon-link" do %>
      <%= image_tag "https://s1.qwant.com/thumbr/0x380/9/9/55f7baade4fc7b73e94047a5ee1fc5cb2d52a572b2df74128ba5071763b542/tennis-ball-clipart-red-11.png?u=http%3A%2F%2Fmoziru.com%2Fimages%2Ftennis-ball-clipart-red-11.png&q=0&b=1&p=0&a=1", height: 50 %>
      <% end %>
    <% else %>
      <%= link_to player_convocations_path, class: "navbar-wagon-brand navbar-wagon-item navbar-wagon-link" do %>
      <%= image_tag "https://s1.qwant.com/thumbr/0x380/9/9/55f7baade4fc7b73e94047a5ee1fc5cb2d52a572b2df74128ba5071763b542/tennis-ball-clipart-red-11.png?u=http%3A%2F%2Fmoziru.com%2Fimages%2Ftennis-ball-clipart-red-11.png&q=0&b=1&p=0&a=1", height: 50 %>
      <% end %>
    <% end %>
  <% else %>
    <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "https://s1.qwant.com/thumbr/0x380/9/9/55f7baade4fc7b73e94047a5ee1fc5cb2d52a572b2df74128ba5071763b542/tennis-ball-clipart-red-11.png?u=http%3A%2F%2Fmoziru.com%2Fimages%2Ftennis-ball-clipart-red-11.png&q=0&b=1&p=0&a=1", height: 50 %>
    <% end %>
  <% end %>


  <!-- Title -->
  <div class="navbar-wagon-center ">
   <%= link_to root_path do %>
    <h3> Plan my play</h3>
   <% end %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <div class="navbar-wagon-item">
      <% if user_signed_in? %>
        <div class="dropdown">
          <p class="avatar dropdown-toggle" id="navbar-wagon-menu" data-toggle="dropdown">
            <%= current_user.first_name%> <%= current_user.last_name.upcase %>
          </p>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profil") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Paramètres") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Déconnexion") %>
              <% end %>
            </li>
          </ul>
        </div>
      <% else %>
        <%= link_to t(".sign_in", default: "Connexion"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
      <% end %>
    </div>
  </div>
</div>














