<div class="card border-secondary mb-4">
  <div class="card-header d-flex justify-content-between">
    <%= convocation.match.tournament.name %>
      <% if convocation.status.to_s == "refused" %>
      <i class="far fa-times-circle" style="color: red; font-size: 25px;"></i>
      <% elsif convocation.status.to_s == "pending"  %>
      <i class="far fa-clock" style="color: orange; font-size: 25px;"></i>
      <% else %>
      <i class="far fa-check-circle" style="color: green; font-size: 25px;"></i>
      <% end %>
  </div>
  <div class="card-body text-secondary">
    <p class="card-text">Le <%= convocation.match.begin_at.strftime("%d/%m/%Y Ã  %I:%M%p") %> </p>
  </div>
    <div class="d-flex justify-content-around" id="action-buttons">
      <button type="button" class="btn btn-success btn-sm" id="accept_button"><%= link_to "J'accepte", accept_player_convocation_path(convocation), method: :post, remote: true %></button>
      <button type="button" class="btn btn-danger btn-sm" id="refuse_button"><%= link_to "Je refuse", refuse_player_convocation_path(convocation), method: :post, remote: true %></button>
    </div>
</div>

